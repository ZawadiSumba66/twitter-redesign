<div class="fill_form mt-4">
<div class="tweet_header text-dark d-flex">
   <%=link_to 'Tweets', root_path, class: "text-dark pr-3 pb-3 text-decoration-none border-bottom-2" %>
</div>
<%= form_with model: @tweet do |f| %>
    <%= f.text_area :text, class: "form-control h-50 border-rounded", placeholder: "Let's Tweet Africa"%>
    <br>
    <%= f.button :Tweet,  class: "btn btn-primary d-flex justify-content-end" %>
<% end %>
</div>